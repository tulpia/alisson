{% extends "base.twig" %}

{% block content %}
    <section data-router-view="contact">
        <div class="wrapper">
            <h1 class="title">{{ data.fields.main_text }}</h1>

            <div class="page-contact__content">
                <div>
                    <p class="text">{{ data.fields.text_before_mail }}</p>
                </div>
                <div>
                    <a href="mailto:{{ data.fields.email }}" class="text">{{ data.fields.email }}</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}