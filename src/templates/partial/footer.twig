<div class="footer-grid footer__first-part">
    {% if data.theme.footer.footer_email_contact %}
        <div>
            <p class="text content__title">Get in touch</p>
            <a class="text" href="mailto:{{ data.theme.footer.footer_email_contact }}">{{ data.theme.footer.footer_email_contact }}</a>
        </div>
    {% endif %}
    {% if data.theme.footer.footer_social_links %}
        <div>
            <p class="text content__title">Social</p>

            {% for social in data.theme.footer.footer_social_links %}
                <a class="text" href="{{ social.link }}" target="_blank">{{ social.text }}</a>
            {% endfor %}
        </div>
    {% endif %}
    {% if data.theme.footer.footer_location %}
        <div>
            <p class="text content__title">Location</p>
            <p class="text">{{ data.theme.footer.footer_location }}</p>
        </div>
    {% endif %}
</div>
